@model IEnumerable<PetLover.Models.Contacto>

<h2 style="color: white;">Lista Contactos</h2>

<p>
    <a asp-action="Create" style="color: white;"><img img src="~/img/add.png" height="45px">Agregar</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
                <th scope="col" style="color: white;">
                    #
                </th>
                <th scope="col" style="color: white;">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="col" style="color: white;">
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th scope="col" style="color: white;">
                    @Html.DisplayNameFor(model => model.Message)
                </th>
        </tr>
    </thead>

    <tbody>

    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">
                <a asp-action="Edit" asp-route-id="@item.ID"><button type="button" class="btn btn-info">Editar</button></a> |
                <a asp-action="Delete" asp-route-id="@item.ID"><button type="button" class="btn btn-danger">Eliminar</button></a>
            </th>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.Name)
            </td >
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => item.Message)
            </td>
        </tr>
    }        
    </tbody>    
</table>