@model PetLover.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}
<link rel="stylesheet" href="~/css/create.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css" />


<div class="row">
    <div class="col-md-4">  
        <h1 class="display-4">Contacto</h1>
        
        <form asp-controller="Contacto" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Name" class="label_nombre" style="margin-top: 15px;"></label>
                    <input asp-for="Name" class="form-control" style="background: #225FC5; color: white; box-sizing: border-box; box-shadow: 0px 4px 4px rgba(34,95,196,1.0); border-radius: 10px; flex-shrink: 0; height: 44px; margin-top: 15px; width: 500px; "/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" style="background: #225FC5; color: white; box-sizing: border-box; box-shadow: 0px 4px 4px rgba(34,95,196,1.0); border-radius: 10px; flex-shrink: 0; height: 44px; margin-top: 15px; width: 500px; " />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>               
                    
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" style="background: #225FC5; color: white; box-sizing: border-box; box-shadow: 0px 4px 4px rgba(34,95,196,1.0); border-radius: 10px; flex-shrink: 0; height: 44px; margin-top: 15px; width: 500px; "/>
                </div>               

                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" style="background: #225FC5; color: white; box-sizing: border-box; box-shadow: 0px 4px 4px rgba(34,95,196,1.0); border-radius: 10px; flex-shrink: 0; height: 44px; margin-top: 15px; width: 500px; "/>
                </div>               

                <div class="form-group">
                    <label asp-for="Subject" class="control-label"></label>
                    <input asp-for="Subject" class="form-control" style="background: #225FC5; color: white; box-sizing: border-box; box-shadow: 0px 4px 4px rgba(34,95,196,1.0); border-radius: 10px; flex-shrink: 0; height: 44px; margin-top: 15px; width: 500px; "/>
                </div>    

                <div class="form-group">
                    <label asp-for="Message" class="control-label"></label>
                    <textarea asp-for="Message" class="form-control" style="background: #225FC5; color: white; box-sizing: border-box; box-shadow: 0px 4px 4px rgba(34,95,196,1.0); border-radius: 10px; flex-shrink: 0; height: 130px; margin-top: 15px; width: 500px; "></textarea>
                </div>                

                <div class="form-group">
                    <button type="submit" class="btn enviar" style="background-color: #00ACE2; flex-shrink: 0; height: 62px; margin-top: 15px; width: 317px;">Enviar</button> 
                </div>                

        </form>
            
        <td>@Html.DisplayTextFor(model => model.Response)</td>    
    
    </div>
</div>